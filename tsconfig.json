{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types/",
      "types/"
    ]
  },
  "include": [
    "src/",
    "tests/"
  ]
}
